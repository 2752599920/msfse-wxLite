.tab_title{
  display: block;
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
}
.user{
  width:100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.user image{
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.article{
  width: calc(100% - 100rpx);
  height: 100%;
  box-sizing: border-box;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
}
.name{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user_name{
  color: #ec3f42;
}
.reply_time{
  color: #999;
  font-size: 26rpx;
}
.text text{
  display: block;
  width:100%;
  white-space: nowrap;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}
