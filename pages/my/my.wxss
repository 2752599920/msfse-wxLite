.imformation>view{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.imformation>view>image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.imformation text{
  
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

