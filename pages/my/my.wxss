/* pages/my/my.wxss */
.my{
  width: 100%;

}
.apply{
  position: absolute;
  color: #fff;
  right: 30rpx;
  letter-spacing: 5rpx;
  font-weight: 200;
  top: 30rpx;
  z-index: 3;
}
.head{
  position: relative;
  width: 100%;
  height: 460rpx;
  /* background:#ec3f42; */
  background-image:linear-gradient(to right,#ff6000,#ff4800) ;
  background-filter:blur(2rpx);
  display: grid;
  place-content: center;
  z-index: 2;
}
/* .head .img:before{
  position: absolute;
