/* pages/my/my.wxss */
.my{
  width: 100%;

}
.head{
  width: 100%;
  height: 460rpx;
  box-sizing: border-box;
  padding: 30rpx 0;
}
.head image{
  width: 80%;
  height: 100%;
  border-top-right-radius: 48%;
  border-bottom-right-radius: 48%;
}
.user_img{
  position: absolute;
  top: 350rpx;
  left: 70%;
  width: 300rpx;
  height: 300rpx;
  opacity: .8;
  z-index: -1;
  border-radius: 50%;
  background-image:linear-gradient(to right,#ec3f42,#e00b52) ;
}

.user_name{
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 56rpx;
  font-weight: bold;
}
.user_name text:last-of-type{
  display: block;
  font-size: 30rpx;
  color: #ec3f42;
}

.content{
  width: 100%;
  margin-top: 30rpx;
}
.imformation{
  width:100%;
}
.tab{
  font-size: 48rpx;
  text-align: center;
  color: #fff;
  font-weight: bold;
  box-sizing: border-box;
  /* background: #6930c3; */
  background-image:linear-gradient(to right,#6930c3,#4361ee) ;
  height: 100rpx;
  padding: 0 100rpx;
  line-height: 100rpx;
}
/* .tab text{
  border-radius: 25rpx;
  background: #6930c3;

} */
.imformation>view{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.imformation>view>image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.imformation text{
  
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

