/* pages/newslist/newslist.wxss */
.newlist{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.newlist .title{
  width: 100%;
  font-weight: bold;
  font-size: 48rpx;
}
.source{
  font-size: 32rpx;
  color: #f25c54;
  display: flex;
  flex-direction: column;
  margin: 30rpx auto;
  letter-spacing: 5rpx;
}
.newlist image{
  width: 100%;
  border-radius: 25rpx;
  margin: 20rpx auto;
}
.icon{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.reading,
.likes{
  background: #eee;
}
.reading,
.likes,
.icon_reading,
.icon_likes{
  vertical-align: middle;
}
.article{
  font-size: 32rpx;
  font-weight: 200;
  letter-spacing: 2rpx;
  line-height: 50rpx;
}