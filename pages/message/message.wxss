/* pages/message/message.wxss */
.message{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.message_window{
  margin-top: 45rpx;
  width: 100%;
  box-sizing: border-box;
  padding-right: calc(100% - 120rpx - 70%);
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
}
.message_window image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.message_text::before{
  position: absolute;
  content: '';
  display: block;
  width: 10rpx;
  height: 0rpx;
  border-color:transparent #b9b8b8 transparent transparent ;
  border-style: solid;
  border-width: 20rpx;
  transform: translate(-66rpx,-22rpx);
  
}
.message_text{
  width: calc(100% - 120rpx);
  border-radius: 25rpx;
  border-top-left-radius:0rpx ;
  box-sizing: border-box;
  padding: 20rpx;
  box-shadow:  2px 0px 6px #bec4c4, 
              -2px 0px 4px #b9b8b8;
}
.message_reply{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom:0;
  left: 0;
  display: flex;
  justify-content: space-between;
}
.message_reply input{
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
  box-sizing: border-box;
  padding:0 30rpx;
}
.button{
  width: 20%;
height: 100%;
line-height: 100rpx;
text-align: center;
color: #fff;
background: #ec3f42;
}