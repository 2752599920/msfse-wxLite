        <text>点赞</text>
      </view> -->
    </view>
  </view>
</view>
<view class="comment_input">
     <!-- <image src="../../images/bg1.png" mode="heightFix"></image>  -->
     <view class="button">
       <view class="left">
         <text class="shop_name">章鱼小丸子</text>
        <text class="button_input" style="display:inline;">参与评论+</text>
       </view>
       <view class="num">
        <text>{{CommentData.length}}</text>
      </view>
     </view>
  </view>
  <van-popup
    show="{{ show }}"
    closeable
    close-icon="close"
    position="bottom"
    custom-style="height: 20%"
    bind:close="onClose"
  />
