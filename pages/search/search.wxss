/* pages/search/search.wxss */
.search{
  box-sizing: border-box;
  padding: 20rpx 30rpx 0 30rpx;
}
.search_input{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 5px;
  border: 2px solid #ec3f42;
  box-sizing: border-box;
  padding-left:25rpx;

}
#search{
  width: 100%;
  height: 100%;
}

.placeholder{
  color:#eee;
}
.button{
width: 20%;
height: 100%;
line-height: 100rpx;
text-align: center;
color: #fff;
background: #ec3f42;
}
.banner{
  width: 100%;
  height: 204rpx;
  margin:30rpx auto;
  border-radius: 20rpx;
  overflow: hidden;
}
.banner_img{
width: 100%;
height: 100%;
}
.search_list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.search_often{
  width: 50%;
  text-align: center;
  margin-top: 20rpx;
}
.histroy{
  display: flex;
  justify-content: space-between;
}
.icon,
.text{
  vertical-align: middle;
}
.icon{
  color: #ec3f42;
}
.text{
  color: #999;
  margin-left: 5rpx;
  font-size: 32rpx;
}
.histroy_words{
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.histroy_words text{
  vertical-align: middle;
  padding:5rpx 20rpx;
  margin:10rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
  color: #fff;
  background-image:linear-gradient(to right,#6930c3,#4361ee) ;
}