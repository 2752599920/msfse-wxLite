/* pages/news/news.wxss */
.news{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.news_list{
  width: 100%;
  margin:30rpx 0;
  box-sizing: border-box;
  padding:30rpx;
  background:#fdfafa;
  border-radius: 25rpx;
  box-shadow:  3px 3px 9px #bec4c4, 
              -3px -3px 9px #ffffff;
}
.title{
  display: block;
  width: 100%;
  font-weight: bold;
  font-size: 42rpx;
  margin-bottom: 30rpx;
}
.img{
  width: 100%;
  height: 300rpx;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}
.source{
  font-size: 32rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}