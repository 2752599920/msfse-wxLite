/* pages/news/news.wxss */
.news{
  width: 100%;
  /* box-sizing: border-box;
  padding: 0 30rpx; */
}

.news_list{
  width: 100%;
  margin:30rpx 0;
  box-sizing: border-box;
  padding:30rpx;
  background:#fdfafa;
  border-radius: 25rpx;
  /* border:1rpx solid #f25c54; */
  border:1rpx solid #ccc;
}
.title{
  display: block;
  width: 100%;
  font-weight: 500;
  font-size: 42rpx;
  margin-bottom: 30rpx;
  letter-spacing: 5rpx;
}
.img{
  width: 100%;
}
.img image{
  width: 100%;
  height: 300rpx;
  border-radius: 5rpx;
}
.source{
  font-size: 32rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  letter-spacing: 5rpx;
}